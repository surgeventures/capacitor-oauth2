{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist/esm",
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es2017"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/**/*.test.ts"
    ]
}
